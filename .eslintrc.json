{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "eslint:recommended",
        "prettier"
    ],
    "env": {
        "node": true
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "no-console": "off",
        "import/prefer-default-export": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-unused-vars": "warn",
        "@typescript-eslint/no-var-requires": "off",
        "max-len": ["error", { "code": 120 }],
        "prettier/prettier": ["error", {
            "useTabs": true,
            "tabWidth": 2,
            "semi": true,
            "singleQuote": true,
            "parser": "typescript",
            "trailingComma": "none",
            "bracketSpacing": true,
            "arrowParens": "avoid",
            "printWidth": 80
        }]
    }
}
